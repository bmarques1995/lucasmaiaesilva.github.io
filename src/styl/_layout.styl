//edit()

html
    ::selection
        background #333
        color #eee

body
    mainFont(300)
    background #fff
    
a
    text-decoration none
    font-weight bold
    color #404d5b
    transition color 0.2s
    &:hover
        color #d04c3f

    
bp = 990px

section
    margin 0

aside
    span(3/12)
    shift(-9/12, span)
    height 100%
    max-height 100%
    position fixed
    top 0
    left 0
    overflow visible
    overflow-y auto
    z-index 5
    background #333
    +below(bp)
        unshift()
        display block
        width 100%
        position relative
        height 300px
    .sidebar-content
        align(both)
        color #fff
section.blog-content
    background #fff
    span(9/12)
    shift(3/12, span)
    +below(bp)
        unshift()
        display block
        width 100%
    .header-post
        background #ebebeb
        header
            padding-top 20px
            padding-bottom 35px
            text-align center
            h1
                color #333
                margin-bottom 0
                margin-top 0
                text-transform none
                +below(bp)
                    font-size 4em
                    font-weight 400
                font-size 3em
                line-height 1.5
                padding 0 50px
            span
                +below(bp)
                    font-size 1.3em
                font-size 1em
                margin-right 20px
                color #959595
    article
        background #fff