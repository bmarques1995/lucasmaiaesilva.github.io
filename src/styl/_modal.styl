.modalDialog
	position fixed
	overflow-y scroll
	top 0
	right 0
	bottom 0
	left 0
	background rgba(0,0,0,0.8)
	z-index 99999
	opacity 0
	-webkit-transition opacity 400ms ease-in
	-moz-transition opacity 400ms ease-in
	transition opacity 400ms ease-in
	pointer-events none
	
.modalDialog:target
	opacity 1
	pointer-events auto


.modalDialog > div 
	width 800px
	+below(bp)
		width 80%
	position relative
	margin 10% auto
	padding 20px
	background #fff
	
.picture
	col(1/3, cycle:2)
	display inline-block
	+below(bp)
		stack()
		img
			width 100%
		
.description
	h2
		text-align center
	col(2/3, cycle:2)
	display inline-block
	+below(bp)
		stack()

.data
	margin-bottom 20px
	h2
		margin-top 0
		margin-bottom 30px
	.close
		position absolute
		width 30px
		right -15px
		top -20px
		text-align center
		line-height 30px
		margin-top 5px
		background #ff4545
		border-radius(50%)
		font-size 16px
		color #8d0000
		+below(bp)
			width 40px
			line-height 40px
		&:hover
			background #fc6363
