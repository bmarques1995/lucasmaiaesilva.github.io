.posts
    background #fff
    width 96%
    margin 3.7em auto
    .post
        col(1/3, cycle: 3)
        margin-bottom 30px
        +below(bp)
            col(1/2, cycle:2)
            font-size 1.2em
                
        h1
            font-size 1.1em
            font-weight 300
            color #fff
            +below(bp)
                display block
                text-align center
                margin-bottom 1.1em
        a
            img
                opacity 
                transition 0.3s opacity
                &:hover
                    opacity 0.9
        img
            width 100%
            height auto
            background #ededed
        .t-post-info
            font-size 1.4em
            padding 10px
            background #2c3f52
            font-weight 400
            +below(bp)
                font-size .7em
                padding-bottom 2px
        .more
            text-align right
            +below(bp)
                text-align center
                margin-bottom 1.1em