.posts
    background #fff
    width 96%
    margin 3.7em auto
    .post
        col(1/3, cycle: 3)
        margin-bottom 30px
        +below(bp)
            col(1/2, cycle:2)
            font-size 1.2em
                
        h1
            font-size 1.1em
            font-weight 300
            color #fff
            +below(bp)
                display block
                text-align center
                margin-bottom 1.1em
        img
            width 100%
            height auto
            background #ededed
        .t-post-info
            padding 5px 10px 20px 10px
            background #2c3f52
            font-weight 400
            +below(bp)
                padding-bottom 8px
        .more
            text-align right
            +below(bp)
                text-align center
                margin-bottom 1.1em
            a
                +below(bp)
                    padding 10px
                text-align center
                padding 5px 10px
                border-radius 2px
                background #ed4e6e
                color #fff
                text-decoration none
            a:hover
                background #eb647f