section.blog-content
	article
		display block
		font-size 1.3em
		line-height 1.6
		-webkit-font-smoothing atialiased
		color #333
		margin-bottom 3.5em
		+below(bp)
			font-size 1.6em
		p
			font-weight 400
			line-height 1.7
			word-wrap break-word
			+below(bp)
				font-size .7em
		img
			display block
			max-width 80%
			margin 0 auto
		#layout
			width 90%
			margin 0 auto
		p,h1,h2,h3,h4,ul,ol,iframe,blockquote
			text-align left
			width 90%
			margin 1.3em auto
		h1,h2,h3,h4
			font-weight 600
			line-height 1.1
			color #444
			
.dsq-comment-header
	white-space normal !important
		
			
		
			